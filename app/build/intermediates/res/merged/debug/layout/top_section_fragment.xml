<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/etTopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:width="300dp"/>

    <EditText
        android:id="@+id/etBottomText"
        android:layout_below="@+id/etTopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:width="300dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Meme"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/etBottomText"
        android:layout_alignLeft="@+id/etBottomText"
        android:layout_alignStart="@+id/etBottomText" />

    <Button
        android:id="@+id/btn2"
        android:onClick="savePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Meme"
        android:layout_alignTop="@+id/btn"
        android:layout_alignRight="@+id/etBottomText"
        android:layout_alignEnd="@+id/etBottomText" />


</RelativeLayout>