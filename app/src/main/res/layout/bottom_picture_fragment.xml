<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rlBottomPicFragment"
    android:background="@drawable/programmer">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Top"
        android:id="@+id/tvTopMemeText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bottom"
        android:id="@+id/tvBottomMemeText"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tvTopMemeText"
        android:layout_alignStart="@+id/tvTopMemeText"
        android:editable="false"
        android:textColor="#ffffff"
        android:gravity="center_horizontal" />

</RelativeLayout>